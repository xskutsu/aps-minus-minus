{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"rootDir": "./src",
		"declaration": true,
		"stripInternal": true,
		"emitDeclarationOnly": true,
		"outDir": "types",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}